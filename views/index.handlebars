<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div style="display: flex; justify-content: center;">
        <img src="/assets/img/burger.png" align="middle" height="250" width="250" alt="Burgers"></img>
      </div>
      <h1>Eat A Burger</h1>
    </div>
    <div class="container">
      <div class="row">
        <div style="display: flex; justify-content: center;">
          <div class="col-xs-6">
            {{#each burger_data}} {{#unless this.devoured}}
            <ul>{{this.ID}}.{{this.burger_name}}</ul>
            <div class="col-xs-6">
              <form method="POST" action="/burgers/update?_method=PUT" class="button-size">
                <button type="submit" class="btn btn-default">Imma Eat it!</button>
              </form>
              {{/unless}} {{/each}}
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="col-xs-6 text-center">
    {{#each burger_data}} {{#if this.devoured}}
    <input class="form-control" type="text" value="{{this.ID}}.{{this.burger_name}}"> {{/if}} {{/each}}
  </div>
</div>
</div>
<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <p>Add a name of a burger you're wanting to eat</p>
      <form action="/burgers/create" method="POST">
        <input type="text" name="burger_name" class="form-control" value="" id="enter_text">
        <button type="submit" class="btn btn-primary" id="text-enter-button">SUBMIT</button>
      </form>
    </div>
  </div>
</div>