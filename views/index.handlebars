<h1>Burgers!</h1>
<div class="row">
  <div class="col s6">
    <ul>
      {{#each burger_data}} {{#unless this.devoured}}
      <div class="card light-red">
        <p>
          {{this.id}}. {{this.burger_name}}
          <form action="update/ {{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="1">
            <button type="submit" class="waves-effect waves-light btn green">Devour Burger</button>
          </form>
        </p>
      </div>
      {{/unless}} {{/each}}
    </ul>
  </div>
  {{!-- {{ this.devoured burger}} --}}
  <div class="col s6">
    <ul>
      {{#each burger_data}} {{#if this.devoured}}
      <div class="card light-red">
        <p class="grey-text">
          {{this.id}}. {{this.burger_name}}
          <form action="delete/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit" class="waves-effect waves-light btn green">Remove</button>
          </form>
        </p>
      </div>
      {{/if}} {{/each}}
    </ul>
  </div>
</div>